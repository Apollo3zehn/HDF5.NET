{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch and Debug Standalone Blazor WebAssembly App",
            "type": "blazorwasm",
            "request": "launch",
            "cwd": "${workspaceFolder}/src/HDF5.NET.BlazorBrowser"
        },
        {
            "name": "Run Benchmark",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-benchmark",
            "program": "${workspaceFolder}/artifacts/bin/HDF5.NET.Benchmarks/Release/net7.0/HDF5.NET.Benchmarks.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": "Run Async Benchmark",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-async-benchmark",
            "program": "${workspaceFolder}/artifacts/bin/HDF5.NET.AsyncBenchmark/Release/net7.0/HDF5.NET.AsyncBenchmark.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "externalTerminal"
        },
        {
            "name": "Debug Source Generator",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickRemoteProcess}"
        }
    ]
}